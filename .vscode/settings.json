{
    "files.exclude": {
        "**/*.pyc": true,
        "**/*.pyo": true
    },
    "python.formatting.autopep8Args": [
        "--ignore=E402",
        "--max-line-length=200"
    ],
    "python.envFile": "${workspaceFolder}/.env",
    "python.autoComplete.extraPaths": [],
    "python.linting.pylintEnabled": false,
    "python.linting.pylintArgs": [
        //"--init-hook",
        //"import sys; sys.path.append('${workspaceFolder}/app/bin')"
    ],
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "**/app/lib/**": true,
    },
    "cSpell.words": [
        "confs",
        "dask",
        "data",
        "dltk",
        "entrypoint",
        "getenv",
        "hdfs",
        "input",
        "input hdfs data path",
        "kubernetes",
        "mltk",
        "noqa",
        "path",
        "preop",
        "runtimes",
        "splunk's",
        "splunkbase",
        "splunkers",
        "splunklib",
        "symlinking"
    ],
    "cSpell.ignoreWords": [
        "ainslie",
        "ainslie malik",
        "andreas",
        "andreas greeske",
        "anthony",
        "anthony tellez",
        "changeme",
        "drieger",
        "endings",
        "fujara",
        "greeske",
        "line",
        "malik",
        "philipp",
        "philipp drieger",
        "robert",
        "robert fujara",
        "tellez",
        "unmangle",
        "unmangle windows line endings",
        "windows"
    ],
}